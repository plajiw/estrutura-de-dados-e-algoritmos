{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar C",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",
        "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-Wall", "-Wextra", "-g"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Compilar C++",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-Wall", "-Wextra", "-g", "-std=c++17"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}